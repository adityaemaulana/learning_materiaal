<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iv_beranda_slide"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logomateri"/>

    <TextView
        android:id="@+id/tv_beranda_slide_matakuliah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_beranda_slide"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DAP" />

    <TextView
        android:id="@+id/tv_beranda_slide_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_beranda_slide"
        app:layout_constraintTop_toBottomOf="@+id/tv_beranda_slide_matakuliah"
        tools:text="Variable, Record, I/O, Assigment" />

    <TextView
        android:id="@+id/tv_beranda_slide_jurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#949494"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_beranda_slide"
        app:layout_constraintStart_toEndOf="@+id/iv_beranda_slide"
        tools:text="Informatika" />

</android.support.constraint.ConstraintLayout>