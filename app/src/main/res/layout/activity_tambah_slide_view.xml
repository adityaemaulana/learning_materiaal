<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container_tambah_slide"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TambahSlideView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/view_background_tambah_slide1"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f3f7fa" />

            <LinearLayout
                android:id="@+id/view_container_tambah_slide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin">

                <TextView
                    style="@style/PoppinsTextStyle.BlueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syarat dan Ketentuan"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/syarat_dan_ketentuan"/>
            </LinearLayout>

            <View
                android:id="@+id/view_background_tambah_slide2"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f3f7fa" />

            <LinearLayout
                android:id="@+id/view_container_tambah_slide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin">

                <TextView
                    style="@style/PoppinsTextStyle.BlueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Slide"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Materi"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_nama_materi_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:textSize="14sp"
                    android:theme="@style/EditTextTheme" />

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jurusan"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/sp_jurusan_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                </Spinner>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tingkat"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/sp_tingkat_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                </Spinner>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matakuliah"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/sp_matakuliah_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                </Spinner>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materi"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/sp_materi_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                </Spinner>

                <TextView
                    style="@style/RobotoTextStyle.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slide Materi"
                    android:layout_marginBottom="16dp"/>

                <RelativeLayout
                    android:id="@+id/btn_tambah_slide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/transparent_border">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_upload"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_submit_tambah_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
