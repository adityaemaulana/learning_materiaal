<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="8dp"
    android:elevation="0dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_pertemuan_modul"
            style="@style/PoppinsTextStyle.Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pertemuan 1" />

        <TextView
            android:id="@+id/tv_nama_modul"
            style="@style/PoppinsTextStyle.Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pertemuan_modul"
            tools:text="Pengenalan Algoritma" />

        <TextView
            android:id="@+id/tv_jlh_slide_modul"
            style="@style/PoppinsTextStyle.SmallGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_modul"
            tools:text="10 Slide" />

        <TextView
            android:id="@+id/tv_jlh_diskusi_modul"
            style="@style/PoppinsTextStyle.SmallGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_jlh_slide_modul"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_modul"
            tools:text="50 Discussion" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>